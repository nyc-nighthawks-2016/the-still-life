<% provide(:title, "Forgot password") %>
<h1 id="styled-heading">Forgot password</h1><br>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path, :html => {:id => "form"}) do |f| %>

      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>