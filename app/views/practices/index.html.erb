<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
</head>

<div id="fullpage">
  <div class="section" id="homepage" data-menuanchor="firstPage">
    <div class='container'>
      <h1> The Still Life </h1>
      <p>Here at The Still Life strive to simplify....</p>
    </div>
  </div>

<!-- This will be the slide section for the CHANTS PRACTICE -->

  <div class="section" id='chants' data-menuanchor="secondPage">

    <% @chants.each do |chant| %>
      <div class="slide">
        <div class='container'>    
        <h1><%= link_to chant.name, practice_path(chant) %></h1>
        <h3>Method: <%= chant.method %></h3>
        <br>
        <p><%= chant.description %></p>
        <br>
        <% if current_user %>
          <% if current_user.regimes.length == 0 %>
            <button>
              <%= link_to "Create A Regiment", new_regime_path(practice_id: chant.id) %>
            </button>
          <% end %>
        <% end %>
        </div>
      </div>
    <% end %>

  </div>

  <!-- This will be the slide section for the BODY PRACTICES -->

  <div class="section" id='body_practices' data-menuanchor="secondPage">
