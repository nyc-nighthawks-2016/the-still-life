<div class="edit-regime">
	<center>
	<h1 class="whitefont">Edit Regimen</h1><br>

	  <h3 class="whitefont">
	  <%= @regimen.practice.description %>
	  </h3><br>

	  <div class="col-md-6 col-md-offset-3">
		  <center>
		    <%= form_for @regimen do |f| %>
		    	<h4 class="whitefont">
		    	<%= f.label :practice_time, :class => "whitefont" %>
		    	</h4><br>
		    	<%= time_select :regimen, :daily_practice_time, { ampm: true, minute_step: 15 }, :class => 'timepicker form-control'  %><br>

		    	<%= hidden_field_tag 'regime_id', @regimen.id %>

		    	<%= f.submit "Update Regimen", class: "btn btn-primary" %>
		    <% end %>
	    </center>
	  </div>
	</center>
</div>