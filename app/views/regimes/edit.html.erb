<h1>Edit Regime</h1>

<h2><%= @regime.description %></h2>
<%= form_for @regime do |f| %>
	<%= f.label :practice_time %>
	<%= time_select :regime, :daily_practice_time, { ampm: true, minute_step: 15 }, :class => 'timepicker'  %><br>

	<%= hidden_field_tag 'regime_id', @regime.id %>

	<%= f.submit "Update Regimen", class: "btn btn-primary" %>
<% end %>