<h2> Recordings </h2>
    <% @resources.recordings.each do |recording| %>
        <h3> <%= recording.name %> </h3>
        <p><%= link_to recording.name, recording.url %> </p>
        <audio controls="controls">
          <source src= <%= recording.url %> type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>
        <p><%= recording.description %></p>
        <br></br>
        <div class='bookmarks-form'>
          <%= form_for @bookmarks do |f| %>
            <%= f.submit "Bookmark", class: "btn btn-primary" %>
            <%= hidden_field_tag 'resource_id', recording.id %>
          <% end %>
        </div>
    <% end %>
