<h2> Links </h2>

<div class="yoga-resources">
  <h3> Yoga Asana </h3><br>
    <% @yoga_res.each do |res| %>
    <p><%= link_to res.description, res.url %></p>
    <div class='bookmarks-form'>
        <%= form_for @bookmarks do |f| %>
          <%= f.submit "Bookmark", class: "btn btn-primary" %>
          <%= hidden_field_tag 'resource_id', res.id %>
        <% end %>
    </div>
    <br></br>
    <% end %>
</div>

