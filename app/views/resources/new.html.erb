<%= form_for(@resource, multipart: true) do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.hidden_field :category, value: "Upload" %>
  </div>

  <div class="field">
    <%= f.label :upload %>
    <%= f.file_field :upload %>
  </div>

  <div class="actions">
    <%= f.submit 'Make a resource' %>
    <%= link_to 'Cancel', current_user, class: 'button' %>
  </div>
<% end %>
