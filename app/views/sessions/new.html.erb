<% provide(:title, "Log in") %>
<h1 id="styled-heading">Log in</h1><br>
<div id="login-errors">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>
<br>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
    <%= form_for(:session, url: login_path, :html => {:id => "form"}) do |f| %>
    
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br>
   
    
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br>
   
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p id="styled-heading">New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>