<div id="pageshift">
	<% provide(:title, "Edit User") %>
	<h1 class="whitefont" id="styled-heading">Update your profile</h1><br>

	<br>
	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	  	
	    <%= form_for(@user, :html => {:id => "form"}) do |f| %>
	      	 <%= render 'shared/error_messages' %>

		    <h4 class="whitefont"><%= f.label :first_name %></h4>
		    <%= f.text_field :first_name, class: 'form-control' %><br>
		  
		    <h4 class="whitefont"><%= f.label :last_name %></h4>
		    <%= f.text_field :last_name, class: 'form-control' %><br>
		  
		    <h4 class="whitefont"><%= f.label :username %></h4>
		    <%= f.text_field :username, class: 'form-control' %><br>
		  
		  	<h4 class="whitefont"><%= f.label :age %></h4>
	        <%= f.number_field :age, min: 5, class: 'form-control' %><br>

	        <h4 class="whitefont"><%= f.label :gender %></h4>
	        <%= f.text_field :gender, class: 'form-control' %><br>
	        
		    <h4 class="whitefont"><%= f.label :email %></h4>
		    <%= f.email_field :email, class: 'form-control' %><br>
		  
		    <h4 class="whitefont"><%= f.label :password %></h4>
		    <%= f.password_field :password, class: 'form-control' %><br>
		  
		    <h4 class="whitefont"><%= f.label :about_me %></h4>
		    <%= f.text_area :about_me, class: 'form-control', rows: '10' %><br>
		  
		    <%= f.submit "Edit User", class: "btn btn-primary" %>
		  
		<% end %>
		<div class="gravatar_edit">
	      <%= gravatar_for @user %>
	      <a href="http://gravatar.com/emails" target="_blank">Change</a>
	    </div>
		<%= link_to 'Back', user_path(@user) %>
		</div>
	</div>
</div>
